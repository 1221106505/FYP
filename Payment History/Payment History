// âœ… 1. Process Payment & Save to History
function confirmPayment() {
    const name = document.getElementById("cardName").value;
    const card = document.getElementById("cardNumber").value;
    const total = document.getElementById("paymentTotal").innerText; // Get total from UI

    if (name && card) {
        // Create an order object
        const newOrder = {
            name: name,
            total: total,
            date: new Date().toLocaleString(),
            status: "Success"
        };

        // Get existing history or start a new list [cite: 7, 11]
        const history = JSON.parse(localStorage.getItem("history")) || [];
        
        // Add new order to the top of the list [cite: 8]
        history.unshift(newOrder); 
        
        // Save back to LocalStorage [cite: 9]
        localStorage.setItem("history", JSON.stringify(history));

        alert("Payment Successful! Order recorded.");
        window.location.href = "PaymentHistory.html"; // Redirect to history [cite: 9]
    } else {
        alert("Please fill in your payment details."); [cite: 10]
    }
}

// âœ… 2. Load History for the History Page
function loadHistory() {
    const list = document.getElementById("historyList");
    if (!list) return;

    const history = JSON.parse(localStorage.getItem("history")) || []; [cite: 11]

    if (history.length === 0) {
        list.innerHTML = "<p style='text-align:center; padding:20px;'>No orders found yet.</p>"; [cite: 12]
    } else {
        list.innerHTML = ""; // Clear list
        history.forEach(item => {
            const div = document.createElement("div");
            div.classList.add("history-item"); [cite: 13]
            div.innerHTML = `
                <div class="history-details">
                    <p><b>Order Date:</b> ${item.date}</p>
                    <p><b>Customer:</b> ${item.name}</p>
                    <p><b>Total Amount:</b> RM ${item.total}</p>
                </div>
                <span class="status-badge">Completed</span>
            `; [cite: 13]
            list.appendChild(div); [cite: 13]
        });
    }
}

// Run the loader if we are on the history page
document.addEventListener("DOMContentLoaded", loadHistory)

// Example of how to structure the HTML in script.js
div.innerHTML = `
    <div class="history-details">
        <p><b>Order Date:</b> ${item.date}</p>
        <p><b>Customer:</b> ${item.name}</p>
        <p class="order-total">RM ${item.total}</p>
    </div>
    <span class="status-badge status-completed">Completed</span>
`;
